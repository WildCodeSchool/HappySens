{% extends 'base.html.twig' %}

{% block title %}Inscriptions{% endblock %}

{% block content %}

    <div id="contentInscription" class="parallax-container-others">
        <div class="section no-pad-bot">
            <div class="col s12">
                <div class="headerTitleOthers container" id="headerTitle">
                    <h1 class="header">Inscription</h1>
                    <div class="row">
                        <h5 class="header white-text">Libérez les passions et donnez du sens au travail</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        {{ form_start(form) }}
        {#<form action="" method="post" class="generalContainer">#}
        <div class="row">
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Prenom :</h5>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Nom :</h5>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.firstName) }}
                <label for="firstname"><span class="requireInput">* </span>Votre Prénom</label>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.lastName) }}
                <label for="lastname"><span class="requireInput">* </span>Votre Nom</label>
            </div>
            <div class="col s12">
                <h5 class="titleInscription pink-text text-darken-2">Ville :</h5>
            </div>
            <div class="input-field col s12">
                {{ form_widget(form.town) }}
                <label for="town"><span class="requireInput">* </span>Votre ville</label>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Entreprise :</h5>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Poste :</h5>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.companyID) }}
                <label for="entreprise"><span class="requireInput">* </span>Entreprise</label>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.post) }}
                <label for="post"><span class="requireInput">* </span>Votre poste</label>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Numero :</h5>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Email :</h5>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.phone) }}
                <label for="phone"><span class="requireInput">* </span>Votre numero de tel</label>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.email) }}
                <label for="email"><span class="requireInput">* </span>Votre email</label>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Mot de passe :</h5>
            </div>
            <div class="col s6">
                <h5 class="titleInscription pink-text text-darken-2">Confirmation :</h5>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.password) }}
                <label for="password"><span class="requireInput">* </span>Mot de passe</label>
            </div>
            <div class="input-field col s6">
                {{ form_widget(form.confirmPassword) }}
                <label for="password"><span class="requireInput">* </span>Confirmation mot de passe</label>
            </div>
            <div class="col s12">
                <p><span class="requireInput">* </span> Champs requis</p>
            </div>
        </div>
        <div class="row">
            <div class="input-field right">
                <a href="{{ path('UserProfil', {'slug' : app.user.slug}) }}" class="btn waves-effect waves-light amber darken-2">
                    Continuer
                    <i class="material-icons right">send</i>
                </a>
            </div>
        </div>
        {#</form>#}
        {{ form_end(form) }}
    </div>
{% endblock %}
