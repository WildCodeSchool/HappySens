{% extends 'baseIn.html.twig' %}

{% block content %}
    <div class="container">

        {{ form_start(edit_form) }}

        <div id="step1" >
            <nav>
                <div class="nav-wrapper">
                    <div class="col s12 center">
                        <a href="#!" class="breadcrumb blue pink-text" onclick="goStep1()">Informations personnelles</a>
                        <a href="#!" class="breadcrumb  pink-text" onclick="goStep2()">Informations professionnelles</a>
                        <a href="#!" class="breadcrumb  pink-text" onclick="goStep3()">Informations Happy Sens</a>
                    </div>
                </div>
            </nav>
            <h1>Informations personnelles</h1>

            <div class="row">

                <div class="col s12">
                    <h5 class="titleInscription pink-text text-darken-2">Photo :</h5>
                    <div class="input-field col s12">
                        <i class="material-icons prefix pink-text text-darken-2">account_circle</i>
                        {% if (form_errors(edit_form.photo)) %}
                            {{ form_widget(edit_form.photo, {'attr': {'class': 'error'}}) }}
                        {% else %}
                            {{ form_widget(edit_form.photo) }}
                        {% endif %}
                        <label for="photo"><span class="requireInput">* </span>Photo</label>
                        <div class="center error">
                            {{ form_errors(edit_form.photo) }}
                        </div>
                    </div>
                </div>
                <div class="col s12">
                    <h5 class="titleInscription pink-text text-darken-2">Prenom :</h5>
                    <div class="input-field col s12">
                        <i class="material-icons prefix pink-text text-darken-2">account_circle</i>
                        {% if (form_errors(edit_form.firstName)) %}
                            {{ form_widget(edit_form.firstName, {'attr': {'class': 'error'}}) }}
                        {% else %}
                            {{ form_widget(edit_form.firstName) }}
                        {% endif %}
