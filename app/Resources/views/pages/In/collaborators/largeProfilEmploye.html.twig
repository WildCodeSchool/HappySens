<div class="row hide-on-med-and-down show-on-large">
    {# Others #}
    <div class="col s4">
        <div class="row">
            <div class="card-panel amber darken-2 white-text">
                <h5 class="titleSecond">A propos de moi </h5>
                <p>
                    {{ user.biography }}
                </p>
            </div>
            <div>
            </div>
            <ul class="collection">
                <li class="collection-item">
                    <div class="row valign-wrapper">
                        <span class="center titleSecond">
                            <b>Le bonheur au travail c'est ...</b>
                            {{ user.slogan }}
                        </span>
                    </div>
                </li>
                <li class="collection-item">
                    <div class="row">
                        <p class="col l12 titleSecond">Humeur</p>
                        <div class="col l12">
                            {{ include('user/userMood.html.twig') }}
                        </div>
                    </div>
                </li>
                <li class="collection-item">
                    <div class="row">
                        <p class="col l12 titleSecond">Langues</p>
                        <div class="col l12">
                            {{ user.nativeLanguage }}
                            {% for language in user.languagesUser %}
                                {{ language }}
                            {% endfor %}
                        </div>
                    </div>
                </li>
                {% if user.facebook or user.twitter or user.linkedin is not null %}
                <li class="collection-item">
                    <div class="row">
                        <p class="col l12 titleSecond">Suivez-moi </p>
                        <div class="col l12">
                            {% if user.facebook is not null %}
                                <a href="{{ user.facebook }}"><i class="fa fa-facebook-square fa-2x blue-text text-darken-4"></i></a>
                            {% else %}
                                <span><i class="fa fa-facebook-square fa-2x grey-text text-darken-1"></i></span>
                            {% endif %}
                            {% if user.twitter is not null %}
                                <a href="{{ user.twitter }}"><i class="fa fa-twitter-square fa-2x blue-text text-darken-1"></i></a>
                            {% else %}
                                <span><i class="fa fa-twitter-square fa-2x grey-text text-darken-1"></i></span>
                            {% endif %}
                            {% if user.linkedIn is not null %}
                                <a href="{{ user.linkedin }}"><i class="fa fa-linkedin-square fa-2x blue-text text-darken-3"></i></a>
                            {% else %}
                                <span><i class="fa fa-linkedin-square fa-2x grey-text text-darken-1"></i></span>
                            {% endif %}
                        </div>
                    </div>
                </li>
                {% endif %}
            </ul>
            <div>
                <h5 class="titleSecond">Mes passions et talents cach√©s :</h5>
            </div>
            <ul class="collection">
                <li class="collection-item">
                    {% for skill in user.userskills %}
                        <div class="row">
                            <p class="col l12 titleSecond"> {{ skill.skill }}</p>
                            <div class="col l12">
                                {% set level = skill.level %}
                                {{ include('skill/skillLevel.html.twig') }}
                            </div>
                        </div>
                    {% endfor %}
                </li>
            </ul>
        </div>
    </div>
    <div class="col s8">
        <div class="row">
            <section class="PC_blockProject">
                {{ include('project/blockProject.html.twig') }}
            </section>
        </div>
    </div>
</div>
